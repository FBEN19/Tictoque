{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block content %}
<div class="container my-5">
    <h2>Modifier l'utilisateur</h2>

    {{ form_start(form) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.email) }}
        {{ form_row(form.role) }}
        <br>
        <button class="btn btn-primary">Enregistrer les modifications</button>
    {{ form_end(form) }}
</div>

{% endblock %}