{% extends 'base.html.twig' %}

{% block content %}
<div class="container mt-4">
    <div class="bg-white shadow-sm p-4 rounded">
        <h1 class="text-center fw-bold">Top recettes</h1>
        <div class="text-end mt-3">
            <a href="#" class="fw-bold text-decoration-none lien-hover" style="color:#F4A261;">
                Voir plus <i class="bi bi-arrow-right"></i>
            </a>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            {% for recette in topRecettes %}
                <a href="{{ path('app_afficher_recette', {'id': recette.id}) }}" class="text-decoration-none text-dark">
                    <div class="col">
                        <div class="card border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="{{ asset('images/recettes/' ~ recette.image) }}" class="card-img-top rounded" style="height:300px;" alt="{{ recette.titre }}">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ recette.titre }}</h5>
                                <p class="mb-0">
                                    <span class="text-warning">
                                        {% for i in 1..5 %}
                                            {% if i <= recette.noteMoyenne %}
                                                <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
                                            {% else %}
                                                <i class="fa-regular fa-star" style="color: #FFD43B;"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </span>
                                    {{ recette.noteMoyenne }}/5
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

        <h2 class="text-center fw-bold m-5">Dernières recettes publiées</h2>
        <div class="text-end mt-3">
            <a href="{{ path('app_recherche', {min_rating: 0, exclude_ingredient: '', sort_order: 'newest'}) }}" class="fw-bold text-decoration-none lien-hover" style="color:#F4A261;">
                Voir plus <i class="bi bi-arrow-right"></i>
            </a>
        </div>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            {% for recette in dernieresRecettes %}
                <a href="{{ path('app_afficher_recette', {'id': recette.id}) }}" class="text-decoration-none text-dark">
                    <div class="col">
                        <div class="card border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="{{ asset('images/recettes/' ~ recette.image) }}" class="card-img-top rounded" style="height:300px;" alt="{{ recette.titre }}">
                            </div>
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ recette.titre }}</h5>
                                <p class="mb-0">
                                    <span class="text-warning">
                                        {% for i in 1..5 %}
                                            {% if i <= recette.noteMoyenne %}
                                                <i class="fa-solid fa-star" style="color: #FFD43B;"></i>
                                            {% else %}
                                                <i class="fa-regular fa-star" style="color: #FFD43B;"></i>
                                            {% endif %}
                                        {% endfor %}
                                    </span>
                                    {{ recette.noteMoyenne }}/5
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>

        {# Encadré anecdote en bas de page #}
        <div class="alert alert-info mt-5 mb-0">
            <strong>Le saviez-vous ?</strong><br>
            {{ anecdote }}
                    </div>
                </div>
            </div>
{% endblock %}