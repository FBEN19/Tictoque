<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TicToque{% endblock %}</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/@ttskch/select2-bootstrap4-theme@1.5.2/dist/select2-bootstrap4.min.css" rel="stylesheet" />
    
    <!-- CSS personnalisé -->
    <link rel="stylesheet" href="css/style.css">
    {% block stylesheets %}
    <style>
        .pagination a {
            color: #F4A261;
        }
        .profile-picture:hover {
            opacity: 0.8;
            transition: opacity 0.3s;
            background-color:rgb(0, 0, 0);
            color: white;
        }
        body{
            background-color:rgb(239, 242, 248) ;
        }
    </style>
    {% endblock %}
</head>
<body>

    <!-- Barre de navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
        <div class="container d-flex align-items-center">

            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
                <img src="{{asset('images/tictoque.jpg')}}" alt="TicToque" style="height:100px;">
                <span class="ms-2 fw-bold" style="color:#F4A261;">Tictoque</span>
            </a>

            <!-- Barre de recherche -->
            <form class="d-flex flex-grow-1 mx-3" action="{{ path('app_recherche') }}">
                <input class="form-control me-2" type="search" name="q" placeholder="Je cherche..." aria-label="Search">
                <button class="btn" style="background-color : #F4A261; color:white;" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
            
            <!-- Bouton Connexion -->
            {% if app.user %}
                <!-- Menu utilisateur connecté -->
                <div class="dropdown">
                    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color : #F4A261; color:white;">
                        <i class="bi bi-person-circle"></i> Mon compte
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="{{ path('app_profil') }}">Profil</a></li>
                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Gérer les utilisateurs</a></li>
                            <li><a class="dropdown-item" href="#">Gérer les recettes</a></li>
                        {% endif %}
                    </ul>
                </div>
            {% else %}
                <!-- Bouton Connexion -->
                <a href="{{ path('app_login') }}" class="btn" style="background-color : #F4A261; color:white;">
                    <i class="bi bi-person"></i> Connexion
                </a>
            {% endif %}

            <!-- Menu hamburger pour mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <!-- Contenu principal -->
    <main class="container mt-4">
        {% block content %}{% endblock %}
    </main>

    <!-- Footer -->
    <footer class=" text-center py-3 mt-4" style="background-color : #F4A261; color:white;">
        <p class="mb-0">&copy; {{ "now"|date("Y") }} TicToque. Tous droits réservés.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    {% block javascripts %}
    

    {% endblock %}
</body>
</html>