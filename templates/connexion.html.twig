{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="bg-white shadow-sm p-5 rounded" style="max-width: 800px; margin: 0 auto;">
        <h2 class="text-center mb-4" style="color: #F4A261;">Connexion</h2>

        <div class="container">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">{{ message }}</div>
            {% endfor %}
        </div>

        <form action="{{ path('app_login') }}" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Adresse e-mail</label>
                <input type="email" name="_username" id="email" class="form-control"
                       placeholder="Entrez votre email"
                       value="{{ last_username }}" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe</label>
                <input type="password" name="_password" id="password"
                       class="form-control"
                       placeholder="Entrez votre mot de passe" required>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn"
                        style="background-color: #F4A261; color: white; width: 100%;">
                    Se connecter
                </button>
            </div>
        </form>

        <div class="mt-3 text-center">
            <a href="{{ path('mot_de_passe_oublie') }}" style="color: #F4A261; text-decoration: none;">Mot de passe oubli√© ?</a>
            <br><br>
            <h6 class="text-muted">- OU -</h6>
            <br>
            <a href="{{ path('app_register') }}" class="btn"
               style="background-color: white; color: #F4A261; border: 1px solid #F4A261;">
                S'inscrire
            </a>
        </div>
    </div>
    <br><br><br>
</div>
{% endblock %}